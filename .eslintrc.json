{
  "env": {
    "commonjs": true,
    "es6": true,
    "node": true,
    "jest": true
  },
  "extends": [
    "airbnb-base",
    "plugin:lodash/recommended"
  ],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "plugins": [
    "lodash"
  ],
  "rules": {
    "arrow-parens": [
      "error",
      "as-needed"
    ],
    "comma-dangle": [
      "error",
      "never"
    ],
    "import/no-extraneous-dependencies": "off",
    "indent": [
      "error",
      4,
      {
        "SwitchCase": 1
      }
    ],
    "lodash/import-scope": [
      "error",
      "member"
    ],
    "lodash/matches-prop-shorthand": [
      "error",
      "never"
    ],
    "lodash/prefer-lodash-method": [
      2,
      {
        "ignoreMethods": [
          "find"
        ]
      }
    ],
    "lodash/prop-shorthand": [
      2,
      "never"
    ],
    "max-len": [
      "error",
      120
    ],
    "no-underscore-dangle": [
      "error",
      {
        "allow": [
          "_id"
        ]
      }
    ],
    "object-curly-spacing": [
      "error",
      "never"
    ]
  }
}
